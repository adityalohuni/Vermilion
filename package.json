{
  "name": "vermilion",
  "version": "0.1.0",
  "description": "A simple, modern music player.",
  "main": "./out/main/index.js",
  "author": "vaxry",
  "homepage": "https://github.com/vaxerski/vermilion",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "pnpm run typecheck:node && pnpm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:linux": "pnpm run build && electron-builder --linux",
    "build:windows": "pnpm run build && electron-builder --win"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@sveltejs/kit": "^2.27.0",
    "@xhayper/discord-rpc": "^1.3.0",
    "cli-linux-x64": "^1.1.4",
    "mpd-api": "^1.1.3",
    "mpris-service": "^2.1.2",
    "shaka-player": "^4.15.9",
    "yt-dlp-wrap": "^2.3.12",
    "ytmusic_api_unofficial": "^2.1.6"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@ptkdev/sveltekit-electron-adapter": "^0.3.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@types/node": "^22.17.0",
    "electron": "github:castlabs/electron-releases#v37.2.5+wvcus",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.32.0",
    "eslint-plugin-svelte": "^3.11.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.37.3",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "abstract-socket",
      "electron",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "@sveltejs/kit"
    ]
  }
}
